<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_retry_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Main"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_net_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_net_error" />

    <TextView
        android:id="@+id/tv_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dpx_20"
        android:text="@string/net_error"
        android:textColor="@color/color_BE5500"
        android:textSize="@dimen/dpx_16"
        android:textStyle="bold" />

    <com.allen.library.SuperButton
        android:id="@+id/btn_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dpx_50"
        android:paddingStart="@dimen/dpx_8"
        android:paddingTop="@dimen/dpx_5"
        android:paddingEnd="@dimen/dpx_8"
        android:paddingBottom="@dimen/dpx_5"
        android:text="@string/retry"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/dpx_14"
        android:textStyle="bold"
        app:sCornersRadius="@dimen/dpx_20"
        app:sSolidColor="@color/color_BE5500" />

</LinearLayout>