<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dpx_53"
        android:background="@color/color_4FC3F7" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dpx_20"
        android:layout_marginEnd="@dimen/dpx_20"
        android:layout_marginTop="@dimen/dpx_20">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="@string/hint_user_name"
            android:maxLines="1"
            android:textColor="@color/color_212121"
            android:textCursorDrawable="@color/color_03A9F4"
            android:textSize="@dimen/dpx_20"
            tools:text="biginsect" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dpx_20"
        android:layout_marginTop="@dimen/dpx_10"
        android:layout_marginEnd="@dimen/dpx_20"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="@string/hint_pwd"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/color_212121"
            android:textCursorDrawable="@color/color_03A9F4"
            android:textSize="@dimen/dpx_20" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.allen.library.SuperButton
        android:id="@+id/btn_login"
        android:layout_width="@dimen/dpx_160"
        android:layout_height="@dimen/dpx_50"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dpx_30"
        android:text="@string/login"
        android:textColor="@color/color_212121"
        android:enabled="true"
        android:textSize="@dimen/dpx_20"
        app:sCornersRadius="@dimen/dpx_12"
        app:sSolidColor="@color/color_4FC3F7" />

</LinearLayout>